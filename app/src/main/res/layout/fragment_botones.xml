<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa un nÃºmero del 1 al 6"
        android:inputType="number" />

    <Button
        android:id="@+id/botonApostar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apostar" />

    <ImageView
        android:id="@+id/imagenDado"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dado_1"
        android:background="@drawable/dado_background"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>