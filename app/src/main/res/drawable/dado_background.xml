<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del dado -->
            <corners android:radius="10dp" /> <!-- Radio de las esquinas redondeadas -->
        </shape>
    </item>
    <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Color del borde del dado -->
            <corners android:radius="5dp" /> <!-- Radio de las esquinas redondeadas del borde -->
        </shape>
    </item>
</layer-list>